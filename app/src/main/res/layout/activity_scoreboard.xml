<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hanifkf.beginer1.ScoreboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:background="@android:color/holo_red_light"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tim Kece"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/nama_tim_1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_margin="25dp"
                android:textSize="80sp"
                android:id="@+id/score_tim_1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Point"
                android:layout_gravity="center_horizontal"
                android:id="@+id/two_point_tim_1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Point"
                android:layout_gravity="center_horizontal"
                android:id="@+id/three_point_tim_1"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/holo_green_light"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tim Kece"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/nama_tim_2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_margin="25dp"
                android:textSize="80sp"
                android:id="@+id/score_tim_2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Point"
                android:layout_gravity="center_horizontal"
                android:id="@+id/two_point_tim_2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Point"
                android:layout_gravity="center_horizontal"
                android:id="@+id/three_point_tim_2"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btn_selesai"
            android:text="Selesai"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"/>
    </RelativeLayout>
</LinearLayout>